---
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
import GitHubStats from "@/components/mdx/GitHubStats.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout title="About">
  <MainCard
    title="About Heathc1iff"
    description="关于 希斯克利夫"
    image="/image/about-banner.png"
    infoIcon="lucide:user"
  >
    <div class="space-y-10 mb-8">
      <!-- Profile Section -->
      <section class="flex flex-col md:flex-row gap-8 items-center md:items-start">
        <div class="avatar">
          <div
            class="w-32 h-32 md:w-40 md:h-40 rounded-xl ring ring-primary ring-offset-base-100 ring-offset-2 overflow-hidden"
          >
            <img src="https://github.com/heathc1iff-sec.png" alt="SunMaple" width="160" height="160" loading="eager" />
          </div>
        </div>

        <div class="flex-1 text-center md:text-left">
          <h1 class="text-3xl md:text-4xl font-bold mb-2">Heathc1iff</h1>
          <p class="text-xl text-base-content/80 mb-4">Web Security & Red Team</p>

          <div class="flex flex-wrap gap-3 justify-center md:justify-start mb-6">
            <a
              href="https://github.com/heathc1iff-sec"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-sm btn-outline gap-2"
            >
              <Icon name="lucide:github" class="w-4 h-4" />
              <span>GitHub</span>
            </a>
            <a
              href="https://twitter.com"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-sm btn-outline gap-2"
            >
              <Icon name="lucide:twitter" class="w-4 h-4" />
              <span>Twitter</span>
            </a>
            <a href="mailto:heathc1iff_sec@qq.com" class="btn btn-sm btn-outline gap-2">
              <Icon name="lucide:mail" class="w-4 h-4" />
              <span>Email</span>
            </a>
          </div>

          <p class="text-base-content/80">
            Hi, I'm Heathc1iff! I'm a third-year university student, passionate about web security and a member of the XMCVE security team. Currently, I'm preparing for the OSEP certification while exploring the world of cybersecurity.
          </p>
        </div>
      </section>

      <!-- GitHub Stats -->
      <section>
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:github" class="w-6 h-6 text-primary" />
          <span>GitHub Statistics</span>
        </h2>

        <GitHubStats username="heathc1iff-sec" showLanguages={false} showCommitGraph={true} />
      </section>

