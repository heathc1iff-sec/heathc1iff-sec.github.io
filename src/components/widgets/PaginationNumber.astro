---
import type { PaginationNumberProps } from "@interfaces/data";

const {
  number,
  current,
  baseUrl,
  isOnly = false,
} = Astro.props as PaginationNumberProps;
// 使用 == 进行比较，因为 number 可能是字符串 "1" 或数字 1
const href = number == 1 ? baseUrl : `${baseUrl}/${number}`;
---

<a
  href={href}
  title={`Page ${number}`}
  aria-label={`Page ${number}`}
  class:list={["join-item btn bg-base-100", number === current && "btn-active", isOnly && "rounded-btn"]}
>
  {number}
</a>
